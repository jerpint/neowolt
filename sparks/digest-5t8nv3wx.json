ckground: linear-gradient(to top, #0d1117f0 35%, transparent 100%);\n    display: flex; flex-direction: column; justify-content: flex-end; }\n  .hero .badge { font-size: 0.55rem; color: #6b9; letter-spacing: 0.18em;\n    text-transform: uppercase; margin-bottom: 0.3rem; }\n  .hero h2 { font-size: 0.95rem; color: #e6edf3; font-weight: 600; line-height: 1.3; margin-bottom: 0.25rem; }\n  .hero .why { font-size: 0.68rem; color: #8b9a8b; line-height: 1.5; }\n\n  /* GRID */\n  .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 0.6rem; margin-bottom: 0.75rem; }\n  .card { display: block; text-decoration: none; border-radius: 8px; overflow: hidden;\n    border: 1px solid #161b22; opacity: 0; animation: rise 0.5s ease forwards;\n    transition: border-color 0.15s; }\n  .card:hover { border-color: #2a3a2a; }\n  .card-img-wrap { width: 100%; aspect-ratio: 2 / 1; overflow: hidden;\n    display: flex; align-items: center; justify-content: center; }\n  .card-img-wrap img { width: 100%; height: 100%; object-fit: cover;\n    display: block; filter: brightness(0.65) saturate(0.8); }\n  .card-body { padding: 0.5rem 0.65rem; }\n  .card .tag { font-size: 0.53rem; letter-spacing: 0.13em; text-transform: uppercase;\n    margin-bottom: 0.2rem; opacity: 0.7; }\n  .card h3 { font-size: 0.73rem; color: #c9d1d9; line-height: 1.3; font-weight: 600; margin-bottom: 0.15rem; }\n  .card .blurb { font-size: 0.6rem; color: #555; line-height: 1.4; }\n\n  /* PAPERS CAROUSEL */\n  .section-label { font-size: 0.53rem; color: #333; letter-spacing: 0.18em;\n    text-transform: uppercase; margin-bottom: 0.5rem; }\n  .paper-carousel {\n    border: 1px solid #161b22; border-radius: 8px; overflow: hidden;\n    margin-bottom: 0.75rem;\n    opacity: 0; animation: rise 0.5s ease forwards;\n  }\n  .paper-track { display: flex; transition: transform 0.3s ease; }\n  .paper-slide {\n    flex: 0 0 100%; padding: 0.85rem 1rem;\n    display: flex; flex-direction: column; gap: 0.5rem;\n    min-height: 110px;\n  }\n  .paper-slide h4 { font-size: 0.78rem; color: #c9d1d9; line-height: 1.3; font-weight: 600; }\n  .paper-slide .abstract { font-size: 0.63rem; color: #666; line-height: 1.55; flex: 1; }\n  .paper-slide a { font-size: 0.58rem; color: #3a5a3a; text-decoration: none;\n    align-self: flex-start; }\n  .paper-slide a:hover { color: #6b9; }\n  .paper-nav {\n    display: flex; align-items: center; justify-content: space-between;\n    padding: 0.4rem 0.75rem; border-top: 1px solid #161b22; background: #0a0f15;\n  }\n  .pnav-btn { background: none; border: 1px solid #21262d; border-radius: 4px;\n    color: #555; cursor: pointer; font-size: 0.75rem;\n    width: 24px; height: 24px; display: flex; align-items: center; justify-content: center;\n    transition: all 0.15s; }\n  .pnav-btn:hover { border-color: #6b9; color: #6b9; }\n  .paper-dots { display: flex; gap: 0.3rem; }\n  .pdot { width: 5px; height: 5px; border-radius: 50%; background: #21262d;\n    cursor: pointer; transition: background 0.2s; }\n  .pdot.active { background: #6b9; }\n  .paper-counter { font-size: 0.55rem; color: #333; }\n\n  /* MUSIC */\n  #player { flex-shrink: 0; background: #0d1117; border-top: 1px solid #161b22; padding: 0.7rem 1rem; }\n  #player-label { font-size: 0.53rem; color: #333; letter-spacing: 0.18em;\n    text-transform: uppercase; margin-bottom: 0.6rem; }\n  .carousel { display: flex; align-items: center; gap: 0.6rem; margin-bottom: 0.5rem; }\n  .car-btn { flex-shrink: 0; background: none; border: 1px solid #21262d;\n    border-radius: 4px; color: #555; cursor: pointer; font-size: 0.8rem;\n    width: 26px; height: 26px; display: flex; align-items: center; justify-content: center;\n    transition: all 0.15s; }\n  .car-btn:hover { border-color: #6b9; color: #6b9; }\n  .car-thumb { flex-shrink: 0; width: 72px; height: 40px; border-radius: 4px;\n    object-fit: cover; border: 1px solid #21262d; display: block; background: #161b22; }\n  .car-track { flex: 1; min-width: 0; border: 1px solid #21262d; border-radius: 6px;\n    padding: 0.35rem 0.7rem; display: flex; align-items: center; justify-content: space-between; gap: 0.5rem; }\n  .car-track-name { font-size: 0.7rem; color: #c9d1d9; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }\n  .play-btn { flex-shrink: 0; background: none; border: 1px solid #21262d;\n    border-radius: 4px; color: #6b9; cursor: pointer; font-size: 0.65rem;\n    padding: 0.2rem 0.5rem; transition: all 0.15s; white-space: nowrap; }\n  .play-btn:hover { border-color: #6b9; background: rgba(102,187,102,0.08); }\n  .car-dots { display: flex; gap: 0.3rem; justify-content: center; margin-bottom: 0.5rem; }\n  .car-dot { width: 5px; height: 5px; border-radius: 50%; background: #21262d;\n    transition: background 0.2s; cursor: pointer; }\n  .car-dot.active { background: #6b9; }\n  #yt-frame { width: 100%; height: 0; border: none; border-radius: 6px;\n    transition: height 0.3s ease; background: #161b22; display: block; }\n  #yt-frame.open { height: 155px; }\n\n  @keyframes rise {\n    from { opacity: 0; transform: translateY(6px); }\n    to   { opacity: 1; transform: translateY(0); }\n  }\n</style>\n</head>\n<body>\n<div id=\"content\">\n  <div class=\"date\">good morning jerpint \u00b7 feb 25 2026</div>\n\n  <div class=\"quote-block\">\n    <div class=\"quote-text\">&ldquo;Simplicity is prerequisite for reliability.&rdquo;</div>\n    <div class=\"quote-attr\">\u2014 Edsger W. Dijkstra</div>\n  </div>\n\n  <!-- HERO: LLM=True -->\n  <a class=\"hero\" href=\"https://blog.codemine.be/posts/2026/20260222-be-quiet/\" target=\"_blank\">\n    <div class=\"hero-img-wrap\">\n      <div class=\"hero-bg\" style=\"position:relative;width:100%;aspect-ratio:2/1;background:linear-gradient(135deg,#060f08 0%,#0b1e0e 45%,#06110a 100%);\">\n        <span style=\"font-family:monospace;font-size:1.1rem;color:#6b9;opacity:0.12;letter-spacing:0.15em;\">LLM=true</span>\n      </div>\n    </div>\n    <div class=\"hero-overlay\">\n      <div class=\"badge\">\u2605 top pick</div>\n      <h2>LLM=True \u2014 the quiet convention your tools need</h2>\n      <div class=\"why\">Your shell knows what it is. Your libraries don\u2019t \u2014 yet. Proposing <code style=\"font-family:inherit;color:#6b9;\">LLM=true</code> as an env var contract: agents signal their presence, tools stop chattering. It\u2019s a small thing. Small things compound.</div>\n    </div>\n  </a>\n\n  <div class=\"grid\">\n    <a class=\"card\" href=\"https://therecord.media/denmark-digital-agency-microsoft-digital-independence\" target=\"_blank\" style=\"animation-delay:0.15s\">\n      <div class=\"card-img-wrap\" style=\"background:linear-gradient(135deg,#08101c 0%,#101e35 50%,#080f1c 100%);\">\n        <span style=\"font-size:1.5rem;opacity:0.12;color:#61afef;font-family:monospace;\">\ud83c\udde9\ud83c\uddf0</span>\n      </div>\n      <div class=\"card-body\">\n        <div class=\"tag\" style=\"color:#61afef\">sovereignty</div>\n        <h3>Denmark Ditches Microsoft</h3>\n        <div class=\"blurb\">Danish govt agency moves to FLOSS. Digital independence is policy, not manifesto.</div>\n      </div>\n    </a>\n\n    <a class=\"card\" href=\"https://arxiv.org/abs/2602.20762\" target=\"_blank\" style=\"animation-delay:0.2s\">\n      <div class=\"card-img-wrap\" style=\"background:linear-gradient(135deg,#100810 0%,#1c0f1e 50%,#100810 100%);\">\n        <span style=\"font-size:0.75rem;opacity:0.15;color:#c678dd;font-family:monospace;letter-spacing:0.05em;\">find . -Turing</span>\n      </div>\n      <div class=\"card-body\">\n        <div class=\"tag\" style=\"color:#c678dd\">theory</div>\n        <h3>GNU find is Turing-Complete</h3>\n        <div class=\"blurb\">Yes, the file-finder. It can compute anything computable. Useless; beautiful.</div>\n      </div>\n    </a>\n\n    <a class=\"card\" href=\"https://arxiv.org/abs/2602.21189\" target=\"_blank\" style=\"animation-delay:0.25s\">\n      <div class=\"card-img-wrap\" style=\"background:linear-gradient(135deg,#0f1008 0%,#1c1e0c 50%,#0f1008 100%);\">\n        <span style=\"font-size:0.8rem;opacity:0.14;color:#e5c07b;font-family:monospace;\">pass@k \u2260 pass@1</span>\n      </div>\n      <div class=\"card-body\">\n        <div class=\"tag\" style=\"color:#e5c07b\">ml research</div>\n        <h3>Pass@k Hurts Pass@1</h3>\n        <div class=\"blurb\">Training for sample diversity degrades single-shot accuracy. Two metrics, two models. Pick your eval carefully.</div>\n      </div>\n    </a>\n\n    <a class=\"card\" href=\"https://arxiv.org/abs/2602.21204\" target=\"_blank\" style=\"animation-delay:0.3s\">\n      <div class=\"card-img-wrap\" style=\"background:linear-gradient(135deg,#080f18 0%,#0e1a28 50%,#080f18 100%);\">\n        <span style=\"font-size:0.75rem;opacity:0.14;color:#61afef;font-family:monospace;\">KV \u2261 \u03b1-attn</span>\n      </div>\n      <div class=\"card-body\">\n        <div class=\"tag\" style=\"color:#61afef\">ml research</div>\n        <h3>TTT with KV Binding = Linear Attn</h3>\n        <div class=\"blurb\">Test-time training and linear attention are secretly the same operation. Two threads, one math.</div>\n      </div>\n    </a>\n  </div>\n\n  <div class=\"section-label\">hf papers</div>\n  <div class=\"paper-carousel\" style=\"animation-delay:0.35s\">\n    <div class=\"paper-track\" id=\"paper-track\">\n      <div class=\"paper-slide\">\n        <h4>Learning from Trials and Errors: Reflective Test-Time Planning for Embodied LLMs</h4>\n        <div class=\"abstract\">Embodied agents that reflect on failures and replan at inference time \u2014 no gradient, no fine-tune. The gap between benchmark performance and robust real-world agents is largely this: knowing you failed and adjusting. Reflective planning is the meta-skill.</div>\n        <a href=\"https://huggingface.co/papers/2602.21198\" target=\"_blank\">read on huggingface \u2192</a>\n      </div>\n      <div class=\"paper-slide\">\n        <h4>Query-Focused and Memory-Aware Reranker for Long Context Processing</h4>\n        <div class=\"abstract\">More context doesn\u2019t mean better retrieval. This reranker from Tencent combines query focus with memory to surface what actually matters. If your RAG pipeline is noisy, retrieval quality \u2014 not generation \u2014 is the bottleneck.</div>\n        <a href=\"https://huggingface.co/papers/2602.12192\" target=\"_blank\">read on huggingface \u2192</a>\n      </div>\n      <div class=\"paper-slide\">\n        <h4>From Perception to Action: An Interactive Benchmark for Vision Reasoning</h4>\n        <div class=\"abstract\">The bar for \"vision\" is rising from recognition to decision. This benchmark grounds vision models in interactive tasks \u2014 not labeling, acting. Embodied vision evaluation is the next frontier after static benchmarks plateau.</div>\n        <a href=\"https://huggingface.co/papers/2602.21015\" target=\"_blank\">read on huggingface \u2192</a>\n      </div>\n    </div>\n    <div class=\"paper-nav\">\n      <button class=\"pnav-btn\" onclick=\"pstep(-1)\">&#8592;</button>\n      <div class=\"paper-dots\" id=\"paper-dots\"></div>\n      <span class=\"paper-counter\" id=\"paper-counter\"></span>\n      <button class=\"pnav-btn\" onclick=\"pstep(1)\">&#8594;</button>\n    </div>\n  </div>\n</div>\n\n<div id=\"player\">\n  <div id=\"player-label\">vibes</div>\n  <div class=\"carousel\">\n    <button class=\"car-btn\" onclick=\"step(-1)\">&#8592;</button>\n    <img class=\"car-thumb\" id=\"car-thumb\" src=\"\" alt=\"\" />\n    <div class=\"car-track\">\n      <span class=\"car-track-name\" id=\"track-name\"></span>\n      <button class=\"play-btn\" id=\"play-btn\" onclick=\"playCurrentTrack()\">&#9654; play</button>\n    </div>\n    <button class=\"car-btn\" onclick=\"step(1)\">&#8594;</button>\n  </div>\n  <div class=\"car-dots\" id=\"car-dots\"></div>\n  <iframe id=\"yt-frame\" allow=\"autoplay; encrypted-media\" allowfullscreen></iframe>\n</div>\n\n<script>\n// --- Papers carousel ---\nconst paperCount = 3;\nlet pCurrent = 0;\nconst pTrack = document.getElementById('paper-track');\nconst pDotsEl = document.getElementById('paper-dots');\nconst pCounter = document.getElementById('paper-counter');\nfor (let i = 0; i < paperCount; i++) {\n  const d = document.createElement('div');\n  d.className = 'pdot' + (i === 0 ? ' active' : '');\n  d.onclick = () => pGo(i);\n  pDotsEl.appendChild(d);\n}\nfunction pGo(i) {\n  pCurrent = (i + paperCount) % paperCount;\n  pTrack.style.transform = 'translateX(-' + (pCurrent * 100) + '%)';\n  document.querySelectorAll('.pdot').forEach((d,j) => d.classList.toggle('active', j === pCurrent));\n  pCounter.textContent = (pCurrent + 1) + ' / ' + paperCount;\n}\nfunction pstep(dir) { pGo(pCurrent + dir); }\npGo(0);\n\n// --- Music carousel ---\nconst tracks = [\n  { name: 'Jon Hopkins \\u2014 Emerald Rush',       id: '0YBumQHZnoo' },\n  { name: 'Nils Frahm \\u2014 Says',               id: 'dTBDzh-mFvI' },\n  { name: 'Brian Eno \\u2014 An Ending (Ascent)',   id: 'vNwYtllyt3Q' },\n];\nlet current = 0, playing = false;\nconst nameEl  = document.getElementById('track-name');\nconst dotsEl  = document.getElementById('car-dots');\nconst frame   = document.getElementById('yt-frame');\nconst playBtn = document.getElementById('play-btn');\nconst thumbEl = document.getElementById('car-thumb');\ntracks.forEach((_, i) => {\n  const d = document.createElement('div');\n  d.className = 'car-dot' + (i === 0 ? ' active' : '');\n  d.onclick = () => go(i);\n  dotsEl.appendChild(d);\n});\nfunction go(i) {\n  current = (i + tracks.length) % tracks.length;\n  nameEl.textContent = tracks[current].name;\n  thumbEl.src = 'https://img.youtube.com/vi/' + tracks[current].id + '/mqdefault.jpg';\n  document.querySelectorAll('.car-dot').forEach((d,j) => d.classList.toggle('active', j === current));\n  if (playing) loadTrack(current);\n}\nfunction step(dir) { go(current + dir); }\nfunction loadTrack(i) {\n  frame.src = 'https://www.youtube.com/embed/' + tracks[i].id + '?autoplay=1';\n  frame.classList.add('open');\n  playBtn.textContent = '\\u25A0 stop';\n  playing = true;\n}\nfunction playCurrentTrack() {\n  if (playing) {\n    frame.src = ''; frame.classList.remove('open');\n    playBtn.textContent = '\\u25B6 play'; playing = false;\n  } else { loadTrack(current); }\n}\ngo(0);\n</script>\n</body>\n</html>"}