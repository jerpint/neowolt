{"id":"mlycvs5n-7530f2","type":"chat","title":"Entropy Garden","timestamp":"2026-02-22T23:05:27.371Z","html":"<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n<meta charset=\"UTF-8\">\n<meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n<title>Entropy Garden</title>\n<style>\n  body {\n    margin: 0;\n    padding: 0;\n    background: #0d1117;\n    color: #c9d1d9;\n    font-family: 'Courier New', monospace;\n    overflow: hidden;\n    display: flex;\n    flex-direction: column;\n    align-items: center;\n    justify-content: center;\n    height: 100vh;\n  }\n  #canvas {\n    border: 2px solid #6b9;\n    cursor: crosshair;\n    box-shadow: 0 0 20px rgba(102,187,153,0.3);\n  }\n  #info {\n    position: absolute;\n    top: 20px;\n    left: 20px;\n    font-size: 14px;\n    color: #6b9;\n    text-shadow: 0 0 10px rgba(102,187,153,0.5);\n  }\n  #counter {\n    position: absolute;\n    top: 20px;\n    right: 20px;\n    font-size: 24px;\n    color: #6b9;\n    font-weight: bold;\n  }\n</style>\n</head>\n<body>\n<div id=\"info\">Click to plant entropy seeds</div>\n<div id=\"counter\">Seeds: 0</div>\n<canvas id=\"canvas\" width=\"800\" height=\"600\"></canvas>\n\n<script>\n  const canvas = document.getElementById('canvas');\n  const ctx = canvas.getContext('2d');\n  const counter = document.getElementById('counter');\n  \n  let seeds = [];\n  let seedCount = 0;\n  \n  class Seed {\n    constructor(x, y) {\n      this.x = x;\n      this.y = y;\n      this.age = 0;\n      this.maxAge = 100 + Math.random() * 100;\n      this.branches = [];\n      this.hue = Math.random() * 60 + 120; // green-cyan range\n      \n      // Create initial branches\n      const numBranches = 5 + Math.floor(Math.random() * 8);\n      for (let i = 0; i < numBranches; i++) {\n        this.branches.push({\n          angle: (Math.PI * 2 * i) / numBranches + Math.random() * 0.5,\n          length: 0,\n          maxLength: 30 + Math.random() * 70,\n          speed: 0.5 + Math.random() * 1.5\n        });\n      }\n    }\n    \n    update() {\n      this.age++;\n      \n      // Grow branches\n      this.branches.forEach(branch => {\n        if (branch.length < branch.maxLength) {\n          branch.length += branch.speed;\n        }\n      });\n    }\n    \n    draw() {\n      const alpha = Math.max(0, 1 - this.age / this.maxAge);\n      \n      // Draw center glow\n      ctx.beginPath();\n      const gradient = ctx.createRadialGradient(this.x, this.y, 0, this.x, this.y, 15);\n      gradient.addColorStop(0, `hsla(${this.hue}, 70%, 60%, ${alpha * 0.8})`);\n      gradient.addColorStop(1, `hsla(${this.hue}, 70%, 60%, 0)`);\n      ctx.fillStyle = gradient;\n      ctx.arc(this.x, this.y, 15, 0, Math.PI * 2);\n      ctx.fill();\n      \n      // Draw branches\n      this.branches.forEach(branch => {\n        ctx.beginPath();\n        ctx.strokeStyle = `hsla(${this.hue}, 60%, 50%, ${alpha})`;\n        ctx.lineWidth = 2;\n        ctx.moveTo(this.x, this.y);\n        \n        const endX = this.x + Math.cos(branch.angle) * branch.length;\n        const endY = this.y + Math.sin(branch.angle) * branch.length;\n        \n        ctx.lineTo(endX, endY);\n        ctx.stroke();\n        \n        // Draw tip glow\n        if (branch.length > 10) {\n          ctx.beginPath();\n          ctx.fillStyle = `hsla(${this.hue}, 80%, 70%, ${alpha * 0.6})`;\n          ctx.arc(endX, endY, 3, 0, Math.PI * 2);\n          ctx.fill();\n        }\n      });\n    }\n    \n    isDead() {\n      return this.age > this.maxAge;\n    }\n  }\n  \n  canvas.addEventListener('click', (e) => {\n    const rect = canvas.getBoundingClientRect();\n    const x = e.clientX - rect.left;\n    const y = e.clientY - rect.top;\n    \n    seeds.push(new Seed(x, y));\n    seedCount++;\n    counter.textContent = `Seeds: ${seedCount}`;\n  });\n  \n  function animate() {\n    // Fade effect instead of clear\n    ctx.fillStyle = 'rgba(13, 17, 23, 0.1)';\n    ctx.fillRect(0, 0, canvas.width, canvas.height);\n    \n    // Update and draw seeds\n    seeds = seeds.filter(seed => {\n      seed.update();\n      seed.draw();\n      return !seed.isDead();\n    });\n    \n    requestAnimationFrame(animate);\n  }\n  \n  animate();\n</script>\n</body>\n</html>"}